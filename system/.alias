# git stuff that doesn't belong in .gitconfig
alias g='git'
alias gclean='git branch --merged | grep -Ev "(\*|master|develop)" | xargs -n 1 git branch -d'
alias gpurge='git branch | grep -v "master\|develop" | xargs git branch -d'
# alias `hub` to `git`
eval "$(hub alias -s)"

# commitizen
alias cz='git cz'
alias cza='git cz -a'
alias cz-init='commitizen init cz-conventional-changelog --save-dev --save-exact'

# move around dirs
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -="cd -"

# Recursively remove .DS_Store files
alias cleands='find . -type f -name "*.DS_Store" -ls -delete'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# Better ls & tree defaults
alias ls='ls -AGF'
alias tree='tree -FC --filelimit=100 --dirsfirst --prune'

# run scripts
alias r='yarn run'