# shorter vs code
c() {
  if [[ $# -eq 0 ]]; then
    command code "$(pwd)"
  else
    command code $@
  fi
}

# Calculator
calc() {
  echo "$*" | bc -l;
}

# Open query in Dash app
dash() {
  case $# in
    1) QUERY="$1";;
    2) QUERY="$1:$2";;
    *) echo "Usage: dash [docset] query"; return 1;
  esac
  open "dash://$QUERY"
}

# Automatically install globals and set npm config when switching nvm versions
nvm_with_config() {
  if [[ $1 == "install" ]]; then
    nvm "$@"
    npm-globals
  else
    nvm "$@"
  fi
}
alias nvm="nvm_with_config"

# Create a new directory and enter it
mk() {
  mkdir -p "$@" && cd "$@"
}

# get current local weather, tempe by default
weather() {
  curl -H "Accept-Language: ${LANG%_*}" wttr.in/"${1:-Tempe}"?0q
}
