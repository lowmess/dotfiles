# Create a new directory and enter it
mk() {
  mkdir -p "$@" && cd "$@"
}

# Calculator
calc() {
  echo "$*" | bc -l;
}

# get current local weather, tempe by default
function weather() {
  curl -H "Accept-Language: ${LANG%_*}" wttr.in/"${1:-Tempe}"?0q
}

# Open query in Dash app
dash() {
  case $# in
    1) QUERY="$1";;
    2) QUERY="$1:$2";;
    *) echo "Usage: dash [docset] query"; return 1;
  esac
  open "dash://$QUERY"
}

# Move file without retyping name
# First argument should be the file's path, the second the target directory
# File is moved to working directory if no second argument is passed
move() {
  mv "$1" "${2:-$(pwd)}"/"$(basename $1)"
}

# Copy file without retyping name
# The signature is the exact same as move()
copy() {
  cp "$1" "${2:-$(pwd)}"/"$(basename $1)"
}